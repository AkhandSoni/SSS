{
  "manifest_version": 3,
  "name": "SCube",
  "description": "Blurs spoiler sentences across the web using semantic matching. Hover to reveal.",
  "version": "3.0.0",
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SCube"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["transformers.min.js", "content.js"],
      "run_at": "document_end"
    }
  ]
}